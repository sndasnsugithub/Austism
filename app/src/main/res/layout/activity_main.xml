<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mlab.mechanixlab.austimapp.MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/newdesign" />
    </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout

            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/transport"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/camera"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="camera"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:layout_marginTop="0dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/recorder"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="Recoder"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="23dp"
                />



        </LinearLayout>
        <LinearLayout

            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/gallary"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/gallary"

                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Gallry"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                />
            <Button

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/userimage"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="User"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="35dp"
                />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
